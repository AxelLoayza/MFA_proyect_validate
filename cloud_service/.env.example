# Cloud Service Configuration
# Biometric Signature Validation Service
# 
# INSTRUCCIONES:
# 1. Copiar este archivo como .env
# 2. Reemplazar los valores de ejemplo con valores reales
# 3. NUNCA subir el archivo .env al repositorio

# ============================================
# API Configuration
# ============================================
API_PORT=8000
API_HOST=0.0.0.0

# ============================================
# Security - Basic Authentication
# ============================================
# IMPORTANTE: Estos valores DEBEN coincidir con apiContainer
# CLOUD_PROVIDER_USERNAME y CLOUD_PROVIDER_PASSWORD
ML_SERVICE_USERNAME=your_username_here
ML_SERVICE_PASSWORD=your_secure_password_here

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================
# Request Size Limits
# ============================================
# Maximum request body size in bytes (100 KB)
# Nota: 1200 puntos × ~50 bytes = ~60 KB + overhead = ~70 KB
MAX_REQUEST_SIZE=102400

# ============================================
# Stroke Point Validation
# ============================================
# Minimum points after normalization/padding
MIN_STROKE_POINTS=100
# Maximum points allowed
MAX_STROKE_POINTS=1200
# Target points for padding
MODEL_INPUT_POINTS=100

# ============================================
# TLS/HTTPS Configuration
# ============================================
# Para desarrollo, usa false para evitar problemas con certificados
# Para producción, usa true con certificados válidos
TLS_ENABLED=false
TLS_CERT_FILE=./certs/server.crt
TLS_KEY_FILE=./certs/server.key

# Set to false only for development with self-signed certificates
# NEVER use false in production
VERIFY_CLIENT_CERTIFICATES=false

# ============================================
# ML Model Configuration
# ============================================
MODEL_PATH=./models/lstm_signature_model.keras
CONFIDENCE_THRESHOLD=0.7

# Model parameters
MODEL_SEQUENCE_LENGTH=100
MODEL_FEATURES_PER_POINT=4

# ============================================
# Database Configuration (Future)
# ============================================
# MongoDB connection for storing signatures
# MONGODB_URI=mongodb://localhost:27017/
# MONGODB_DATABASE=biometric_db
# MONGODB_COLLECTION=signatures

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================
# CORS Configuration
# ============================================
# Configure appropriately for production
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# ============================================
# Development/Production Mode
# ============================================
ENVIRONMENT=development
DEBUG=false
